#!/bin/zsh

#<- Error Handling ->
E_HELP=44


#<- Variable Declarations ->
self="$(basename $0)"


#<- Function Declarations ->
usage () {
   echo "Usage: $self [-h|--help] [switch <on|off>]"
   exit "$E_HELP"
}

capsOn () {
   sudo su -c 'setleds -L +caps < /dev/console'
   exit 0
}

capsOff () {
   sudo su -c 'setleds -L -caps < /dev/console'
   exit 0
}


#<- Run Contents ->
case $1 in
   -h|--help)
      usage
      ;;
   switch)
      case $2 in
         on)
            capsOn
            ;;
         off)
            capsOff
            ;;
         *)
            usage
            ;;
      esac
      ;;
   *)
      usage
      ;;
esac
