#!/bin/zsh

#<- Configuration ->
disp=/sys/class/backlight/gmux_backlight/brightness
dstep=2048
kbd=/sys/class/leds/smc::kbd_backlight/brightness
kstep=15
self="$(basename $0)"


#<- Error Handling ->
E_HELP=44
E_PERMS=45


#<- Function Declarations ->
permissions () {
    if [ "$UID" != 0 ]; then
        echo "$self must be run with root privileges"
        exit "$E_PERMS"
    fi
}

usage () {
    echo "Usage: $self [-h|--help] [<increase|decrease> device]"
    exit "$E_HELP"
}

update-kbd () {
    permissions
    sudo tee "$kbd" <<< "$new"
    exit 0
}

update-disp () {
    permissions
    sudo tee "$disp" <<< "$new"
    exit 0
}


#<- Run Contents ->
case "$1" in
    -h|--help)
        usage
        ;;
    increase)
        case "$2" in
            keyboard)
                current="$(<"$kbd")"
                new="$(( current + kstep ))"
                update-kbd
                ;;
            display)
                current="$(<"$disp")"
                new="$(( current + dstep ))"
                update-disp
                ;;
            *)
                usage
                ;;
        esac
        ;;
    decrease)
        case "$2" in
            keyboard)
                current="$(<"$kbd")"
                new="$(( current - kstep ))"
                update-kbd
                ;;
            display)
                current="$(<"$disp")"
                new="$(( current - dstep ))"
                update-disp
                ;;
            *)
                usage
                ;;
        esac
        ;;
    *)
        usage
        ;;
esac
