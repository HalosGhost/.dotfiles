#!/bin/bash

#<-Variable Declaration->
self="$(basename $0)"
E_HELP=44

#<-Function Declaration->
usage () {
  echo "Usage: $self [-n|--notify] [-h|--help]"
  exit "$E_HELP"
}

#<-Run Content->
case "$1" in
  -h|--help) usage;;
  -n|--notify) notify-send "$(curl -s http://icanhazip.com)";;
  *) curl -s http://icanhazip.com
esac

exit 0
