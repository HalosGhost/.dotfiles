#!/bin/bash

#<-Variable Declaration->
self="$(basename $0)"
E_HELP=44

#<-Function Declaration->
usage () {
   echo "Usage: $self [-n|--notify] [-h|--help]"
   exit "$E_HELP"
}

fail() {
   echo "No connection"
   exit 1
}

#<-Run Content->
case "$1" in
   -h|--help) usage;;
   -n|--notify) notify-send "$(curl -s http://icanhazip.com||fail)";;
   *) curl -s http://icanhazip.com||fail;;
esac

exit 0
