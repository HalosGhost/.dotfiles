#!/bin/zsh

#<- Variable Declarations ->
INTERNAL="LVDS"
EXTERNAL="DisplayPort-0"
self="$(basename $0)"


#<- Error Handling ->
E_HELP=44


#<- Function Declarations ->
usage () {
    echo "Usage: $self [-h|--help]"
    exit "$E_HELP"
}

toggle () {
    if (xrandr -q|grep "$EXTERNAL"|grep +); then
        xrandr --output "$EXTERNAL" --off --output "$INTERNAL" --auto
    elif (xrandr -q|grep "$EXTERNAL connected"); then
        xrandr --output "$INTERNAL" --off --output "$EXTERNAL" --auto
    fi
}


#<- Run Contents ->
case "$1" in
    -h|--help)
        usage
        ;;
    *)
        toggle
        ;;
esac
