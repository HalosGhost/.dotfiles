Config

   -- appearance
   { font             = "xft: Inconsolatazi4 for Powerline:size=10"
   , bgColor          = "black"
   , fgColor          = "#cccccc"
   , position         = Static { xpos = 0 , ypos = 0, width = 1920, height = 15 }
   , border           = NoBorder
   , borderColor      = "#cccccc"

   -- layout
   , sepChar          = "%"
   , alignSep         = "}{"
   , template         = "%StdinReader%  }{  %wlp3s0wi%  A: %volume%  %battery%  %date% "

   -- behavior
   , lowerOnStart     = False
   , hideOnStart      = False
   , allDesktops      = True
   , overrideRedirect = True
   , pickBroadest     = False
   , persistent       = True

   -- plugins
   , commands =

       -- battery monitor
       [ Run StdinReader
--       , Run Network  "enp2s0" ["-t", "<dev>"] 300
       , Run Wireless "wlp3s0" ["-t", "W: <quality>"] 30
       , Run Com      "ponymix" ["get-volume"] "volume" 10
       , Run Battery  [ "--template", "<acstatus>", "-L", "15", "-H", "85"
                      , "-l", "red", "-n", "yellow", "-h", "green", "--"
                      , "-o", "<left> (<timeleft>)", "-O", "<left> (<timeleft>)"
                      , "-i", "<left> (<timeleft>)"
                      ] 50

       -- clock
       , Run Date     "%H.%M  %A, %d %b %Y" "date" 10
       ]
   }
